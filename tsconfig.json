{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  }
}